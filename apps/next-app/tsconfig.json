{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true,
    "types": ["node", "react"],
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "index.d.ts",
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
