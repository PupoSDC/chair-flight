{
  "name": "core-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/app/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/core/app/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/libs/core/app"],
      "options": {
        "passWithNoTests": false,
        "reportsDirectory": "{workspaceRoot}/coverage/libs/core/app",
        "config": "{projectRoot}/vitest.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc -p libs/core/app/tsconfig.lib.json --noEmit",
          "tsc -p libs/core/app/tsconfig.test.json --noEmit"
        ]
      }
    }
  },
  "tags": []
}
